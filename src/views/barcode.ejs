<%- include("header") -%>

  <div class="content">
    <div class="content-header">
      <i class="fa-solid fa-right-from-bracket" onclick="logout()"></i>
      <div class="main-content">
        <p>Barcode</p>
        <svg id="barcode"></svg>
      </div>
    </div>
  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.0/dist/JsBarcode.all.min.js"></script>
  <script>
    JsBarcode("#barcode", "<%= key %>", {
      displayValue: false,
      format: "CODE39"
    });
  </script>
  </body>

  </html>

  <style>
    .content {
      grid-area: content;
      background-color: white;
      border-radius: 20px;
      overflow-y: scroll;
    }

    .content::-webkit-scrollbar {
      display: none;
    }

    .content-header {
      margin: 20px 20px 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: end;
      padding: 20px;
    }

    .content-header>i {
      color: #57419d;
      font-size: 30px;
      margin: 0 15px;
    }

    .content-header>i:hover {
      cursor: pointer;
      color: #453772;
    }

    .email {
      color: black;
      font-size: 20px;
      margin: 0 15px;
    }

    .main-content {
      margin: 0 50px;
      width: 100%;
    }

    .main-content>p {
      font-size: 30px;
      font-weight: bold;
    }

    .activities {
      margin-top: 30px;
    }

    .accordion-flush .accordion-item .accordion-button {
      background: white;
      border-bottom: solid #ccc 1px;
    }

    .accordion-button:focus {
      box-shadow: none;
      border-bottom: solid #ccc 1px;
    }

    .accordion-button:not(.collapsed) {
      box-shadow: none;
    }

    .modal-body {
      height: 200px;
      display: flex;
      overflow-x: hidden;
      overflow-y: auto;
    }

    .modal-body::-webkit-scrollbar {
      display: none;
    }

    .participants {
      margin-left: 100px;
    }

    .logoWrap>img {
      width: 200px;
    }

    .btn-exit {
      background: red;
      border: none;
    }

    .btn-exit:hover {
      background: rgb(128, 0, 0);
    }

    @media screen and (max-width: 720px) {
      .content {
        border-radius: 0;
      }

      .main-content>p {
        font-size: 20px;
      }

      .modal-body {
        display: block;
        height: 150px;
      }

      .participants {
        margin-top: 10px;
        margin-left: 0;
      }

      .logoWrap>img {
        width: 100px;
      }

      .btn-exit {
        background: red;
        border: none;
      }
    }

    #id {
      width: 30vw;
      height: 30vw;
    }
  </style>