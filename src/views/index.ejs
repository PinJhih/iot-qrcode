<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="/public/styles/main.css" rel="stylesheet" />
  </head>

  <body>
    <main>
      <h1><%= title %></h1>
      <h3>Hello, <%- username %>!</h3>

      <h3>Your activities:</h3>
      <ul>
        <% activities.forEach(function(activity) { %>
          <li><%= activity.name %></li>
        <% }); %>
      </ul>
    </main>
  </body>
</html>
