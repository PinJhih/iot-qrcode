<!-- Button trigger modal -->
<div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapse<%- activity.id %>" aria-expanded="true" aria-controls="collapse<%- activity.id %>"
            onclick="genQrcode(<%- activity.id %>)">
            <%- activity.name %>
        </button>
    </h2>
    <div id="collapse<%- activity.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne"
        data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="logoWrap" id="qrcode<%- activity.id %>"></div>
                    <div class="participants" id="participants-<%- activity.id %>"></div>
                </div>
                <div class="modal-footer">
                    <% if (owner) { %>
                        <button type="button" class="btn btn-secondary"
                        onclick='location.href="/scanner/<%- activity.id %>"'>Scan</button>
                        <button type="button" class="btn btn-secondary btn-exit" data-bs-dismiss="modal"
                            onclick="DeleteActivity(<%- activity.id %>)">Delete</button>
                    <% } else { %>
                        <button type="button" class="btn btn-secondary btn-exit" data-bs-dismiss="modal"
                            onclick="ExitActivity(<%- activity.activity_id %>)">Exit</button>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>